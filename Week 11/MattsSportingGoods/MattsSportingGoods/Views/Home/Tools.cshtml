@model Sale
@{
    ViewData["Title"] = "Tools";
}

<div class="text-center">
    <h1 class="display-4">Tools</h1>
</div>

<div class="container">
    <div class="row form-group">
        Session state values are:<br />
        <div class="col-sm-3">
            <label for="course">Name</label>
        <input value=@Context.Session.GetString("Name") readonly /><br />
        </div>
        <div class="col-sm-3">
            <label for="currentDate">Today's Date</label>
        <input value=@Context.Session.GetString("CurrentDate") readonly />
        </div>
    </div>
     
</div>

<form asp-action="Tools" method="post">
    @*<div asp-validation-summary="All"></div>*@

    <div class="container">

        <div class="row form-group">
            <label asp-for="SaleAmount" class="col-sm-3"> </label>
            <div class="col-sm-3">
                <input asp-for="SaleAmount" class="form-control" />
            </div>
            <span asp-validation-for="SaleAmount" class="col text-danger"></span>
        </div>
        <div class="row form-group">
            <label asp-for="TaxRate" class="col-sm-3"></label>
            <div class="col-sm-3">
                <input asp-for="TaxRate" class="form-control" />
            </div>
            <span asp-validation-for="TaxRate" class="col text-danger"></span>
        </div>

        <div class="row form-group">
            <label class="col-sm-3">Tax Amount</label>
                <div class="col-sm-3">
                <input value=@ViewBag.TaxAmount.ToString("C2") readonly class="form-control" />
                </div>
        </div>

        <div class="row form-group">
            <label class="col-sm-3">Total Sale Price</label>
            <div class="col-sm-3">
                <input value=@ViewBag.TotalSalePrice.ToString("C2") readonly class="form-control" />
            </div>
        </div>
        <div class="row form-group">
            <div class="col-offset-sm-3">
                <button type="submit" class="btn-primary p-2 mr-5">Calculate</button>
                <a asp-action="Tools" class=" btn btn-outline-secondary p-2">Clear</a>
            </div>
        </div>
    </div>
</form>
